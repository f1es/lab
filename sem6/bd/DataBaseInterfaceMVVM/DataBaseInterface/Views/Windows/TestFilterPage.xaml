<Page x:Class="DataBaseInterface.Windows.TestFilterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DataBaseInterface.Windows"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="100"
      Title="TestFilterPage">

    <Grid Background="{DynamicResource {x:Static SystemColors.AppWorkspaceBrushKey}}">
        <CheckBox x:Name="checkbox1" Content="id % 2 = 0" HorizontalAlignment="Center" Margin="0,16,0,0" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkbox2" Content="id > 2" HorizontalAlignment="Left" Margin="13,36,0,0" VerticalAlignment="Top"/>
        <Button x:Name="acceptButton" Content="Accept" HorizontalAlignment="Center" Margin="0,853,0,0" VerticalAlignment="Top" Click="AcceptButtonClick"/>

    </Grid>
</Page>
